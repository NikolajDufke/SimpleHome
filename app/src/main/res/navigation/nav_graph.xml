<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/eventButtonsFragment">

    <fragment
        android:id="@+id/FirstFragment"
        android:name="com.example.simplehome.test.FirstFragment"
        android:label="@string/first_fragment_label"
        tools:layout="@layout/fragment_first">

        <action
            android:id="@+id/action_FirstFragment_to_SecondFragment"
            app:destination="@id/SecondFragment" />
    </fragment>
    <fragment
        android:id="@+id/SecondFragment"
        android:name="com.example.simplehome.test.SecondFragment"
        android:label="@string/second_fragment_label"
        tools:layout="@layout/fragment_second">

        <action
            android:id="@+id/action_SecondFragment_to_FirstFragment"
            app:destination="@id/FirstFragment" />
    </fragment>
    <fragment
        android:id="@+id/eventButtonsFragment"
        android:name="com.example.simplehome.EventButtonsFragment"
        android:label="event_buttons_fragment"
        tools:layout="@layout/event_buttons_fragment" >
        <action
            android:id="@+id/action_eventButtonsFragment_to_SecondFragment"
            app:destination="@id/SecondFragment" />
    </fragment>
</navigation>